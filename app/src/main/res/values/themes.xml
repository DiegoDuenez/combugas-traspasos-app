    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyleAwa" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blueAwa</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recyclerAwa" parent="Theme.AppCompat.Light.DarkActionBar">
